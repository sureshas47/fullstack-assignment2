<!DOCTYPE html>
<html lang="en">
  <!-- head tag -->
  <head>
    <%- include('./partials/head.ejs') %>
    <title>G2_page</title>
  </head>

  <body>
    <!-- navbar -->
    <%- include('./partials/navbar.ejs') %>
    <!-- navbar ends -->

    <!-- banner content starts-->
    <div class="d-flex justify-content-center align-items-center page_banner">
      <div class="text-center w-100">
        <h1 id="g2-test">G2_Test</h1>
        <p>G2_Test Booking Page</p>
      </div>
    </div>
    <!-- banner content ends -->

    <div class="container mt-5 mb-5">
      <h2>User Information</h2>
      <form action="/g2" method="POST">
        <!-- Personal Information Section -->
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                name="firstName"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                name="lastName"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="licenseNumber">License Number</label>
              <input
                type="text"
                class="form-control"
                id="licenseNumber"
                name="licenseNumber"
                pattern="[A-Za-z0-9]{8}"
                required
              />
              <small class="form-text text-muted"
                >Must be 8 characters (alpha-numeric).</small
              >
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="age">Age</label>
              <input
                type="number"
                class="form-control"
                id="age"
                name="age"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="dob">Date of Birth</label>
              <input
                type="date"
                class="form-control"
                id="dob"
                name="dob"
                required
              />
            </div>
          </div>
        </div>

        <!-- Car Information Section -->
        <h2>Car Information</h2>
        <div class="row">
          <div class="col-md-6">
            <div class="form-group">
              <label for="make">Make</label>
              <input
                type="text"
                class="form-control"
                id="make"
                name="make"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="model">Model</label>
              <input
                type="text"
                class="form-control"
                id="model"
                name="model"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="year">Year</label>
              <input
                type="number"
                class="form-control"
                id="year"
                name="year"
                required
              />
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <label for="plateNumber">Plate Number</label>
              <input
                type="text"
                class="form-control"
                id="plateNumber"
                name="plateNumber"
                required
              />
            </div>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="mt-4">
          <button id="successEvent" type="submit" class="btn btn-primary">
            Save Data
          </button>
        </div>
      </form>

      <!-- Display User Information -->
      <!-- Modal -->
      <div
        class="modal fade"
        id="successModal"
        tabindex="-1"
        role="dialog"
        aria-labelledby="successModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="successModalLabel">Success</h5>
              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close"
              >
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Your information has been saved successfully.
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-primary"
                data-dismiss="modal"
              >
                Close
              </button>
            </div>
          </div>
        </div>
      </div>
      <!--  -->
    </div>
  </body>
</html>
